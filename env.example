#####################################
#export YB_REDIS_HOST=127.0.0.1
#export YB_REDIS_PORT=6379
#export YB_REDIS_FLUSH_AT_STARTUP=false

# Expire user sessions after this many milliseconds
#export YB_SESSION_EXPIRATION=$(expr 1000 \* 60 \* 60 \* 24 \* 365 \* 50)

